<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="User Name"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Order Details:"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemBurger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Burger:"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/itemChicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Chicken:"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/itemFrenchFries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="French Fries:"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/itemOnionRing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Onion Ring:"
                android:textAllCaps="false"
                android:textStyle="italic" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text=""
                android:textAllCaps="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text=""
                android:textAllCaps="false"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/itemBurgerQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Quantity1"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/itemChickenQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Quantity2"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/itemFrenchFriesQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Quantity3"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/itemOnionRingQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Quantity4"
                android:textAllCaps="false"
                android:textStyle="italic" />



        </LinearLayout>


        <ImageButton
            android:id="@+id/buttonConfirm"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:layout_weight="3"
            android:src="@drawable/confirm4"


            />

    </LinearLayout>

</android.support.v7.widget.CardView>

